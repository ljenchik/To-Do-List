<%- include('header'); -%>
<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>
<div class="box">

  
  <%  items.forEach((item) => {%>
    <form action="/delete" method="post">
    <div class="item">
    <input type="checkbox" value="<%= item._id%>" onChange="this.form.submit()" name="checkbox"/>
    <p><%= item.name %></p>
  </div>
  <input type="hidden" name="listName" value="<%= listTitle %>" />
</form>
  <% })%>
    






  <!-- form makes a post request to the home route, posts a value of input -->
  <form action="/" method="post" class="item">
    <input
      type="text"
      name="newItem"
      placeholder="Add task"
      autocomplete="off"
    />
    <button type="submit" name="list" value=<%= listTitle %>>+</button>
  </form>
</div>
<%- include('footer'); -%>
